<body class="page-login">
  <main class="page-content">
    <div class="page-inner">

      <div id="main-wrapper">
        <div class="row">
          <div class="col-md-12">
            <div class="login-box">
              <!-- <a href="index.html" class="logo-name text-lg text-center">SUITE H</a> -->
              <a href="/" class="logo-name text-lg text-center ">
                <img src="/images/logos/logo-suiteh-blue.png" class="logo-suiteh-login">
              </a>
              <p class="text-center m-t-md">Please login into your account.</p>
              <!-- <% if .error %><div class="alert alert-danger" role="alert"><% .error %></div><% end %> -->
              <form class="m-t-md" action="/sign-in" method="POST">
                <div class="form-group">
                  <input type="email" class="form-control" placeholder="Email" required name="user_session[email]" />
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password" required name="user_session[password]" />
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="user_session[remember_me]" value="true">
                    Remember Me
                  </label>
                </div>
                <button type="submit" class="btn btn-info-on btn-block" rel="sign-in">Login &nbsp;<i class="fa fa-arrow-right"></i></button>
                <a href="/password-recovery" class="display-block text-center m-t-md text-sm">Forgot Password?</a>
                <p class="text-center m-t-xs text-sm">Do not have an account?</p>
                <a href="register.html" class="btn btn-default btn-block m-t-md">Create an account</a>
              </form>
              <p class="text-center m-t-xs text-sm">2016 &copy; Suite H by <a href="http://www.still-water.com" target="_blank">Still Water</a>.</p>
            </div>
          </div>
        </div><!-- Row -->
      </div><!-- Main Wrapper -->

    </div><!-- Page Inner -->
  </main><!-- Page Content -->

